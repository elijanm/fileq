{
  "dashboard": {
    "id": null,
    "title": "Authentication Security Dashboard",
    "tags": ["auth", "security"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Authentication Requests Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(auth_requests_total[5m]))",
            "legendFormat": "Total Requests/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 10 },
                { "color": "red", "value": 50 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Failed Login Attempts",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(auth_failed_login_attempts_total[5m]))",
            "legendFormat": "Failed Attempts/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 }
      },
      {
        "id": 3,
        "title": "Active Sessions",
        "type": "stat",
        "targets": [
          {
            "expr": "auth_active_sessions",
            "legendFormat": "Active Sessions"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 }
      },
      {
        "id": 4,
        "title": "Response Time P95",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(auth_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 Response Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 3 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 }
      },
      {
        "id": 5,
        "title": "Authentication Methods Usage",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (method) (auth_requests_total)",
            "legendFormat": "{{method}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 6,
        "title": "Security Events by Type",
        "type": "bargauge",
        "targets": [
          {
            "expr": "sum by (event_type) (rate(auth_security_events_total[1h]))",
            "legendFormat": "{{event_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      },
      {
        "id": 7,
        "title": "Login Success vs Failure Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(auth_requests_total{method=\"login\",status=\"success\"}[5m]))",
            "legendFormat": "Successful Logins"
          },
          {
            "expr": "sum(rate(auth_failed_login_attempts_total[5m]))",
            "legendFormat": "Failed Logins"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {
                "mode": "none",
                "group": "A"
              },
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {
                "type": "linear"
              },
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps"
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Failed Logins"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "mode": "fixed",
                    "fixedColor": "red"
                  }
                }
              ]
            }
          ]
        },
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 }
      },
      {
        "id": 8,
        "title": "Response Time Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum(rate(auth_request_duration_seconds_bucket[5m])) by (le)",
            "legendFormat": "{{le}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 }
      },
      {
        "id": 9,
        "title": "Top Failed Login IPs",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (source_ip) (rate(auth_failed_login_attempts_total[1h])))",
            "legendFormat": "{{source_ip}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "table",
              "inspect": false
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 }
      },
      {
        "id": 10,
        "title": "Account Lockout Events",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(auth_security_events_total{event_type=\"login_attempt_locked_account\"}[5m]))",
            "legendFormat": "Account Lockouts"
          },
          {
            "expr": "sum(rate(auth_security_events_total{event_type=\"account_unlocked_by_admin\"}[5m]))",
            "legendFormat": "Admin Unlocks"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 32 }
      },
      {
        "id": 11,
        "title": "System Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"auth-api\"}",
            "legendFormat": "Auth API"
          },
          {
            "expr": "up{job=\"kratos\"}",
            "legendFormat": "Kratos"
          },
          {
            "expr": "redis_up",
            "legendFormat": "Redis"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": { "text": "DOWN", "color": "red" },
                  "1": { "text": "UP", "color": "green" }
                },
                "type": "value"
              }
            ],
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "red", "value": null },
                { "color": "green", "value": 1 }
              ]
            }
          }
        },
        "gridPos": { "h": 6, "w": 24, "x": 0, "y": 40 }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 37,
    "version": 1,
    "annotations": {
      "list": [
        {
          "name": "Security Events",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(auth_security_events_total{severity=\"critical\"}[1m]) > 0",
          "iconColor": "red",
          "titleFormat": "Security Alert",
          "textFormat": "Critical security event detected"
        }
      ]
    }
  }
}
